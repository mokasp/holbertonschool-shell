#!/usr/bin/env bash
#script that kills an infinite loop
trap "echo I hate the kill command; exit" SIGTERM
trap "echo Y U no love me?!" SIGINT
trap "rm /var/run/myscript.pid; exit" SIGQUIT SIGTERM
i=1
while [ "$i" -gt 0 ]
do
	if [ "$i" -eq 1 ]
	then
		echo -e '#!/usr/bin/env bash\npgrep -f myscript.pid -l' > /var/run/myscript.pid
	fi
	if [ "$i" -eq 2 ]
	then
		chmod u+x /var/run/myscript.pid
	fi
	echo "To infinity and beyond"
	i=$((i+1))
	sleep 2
done
